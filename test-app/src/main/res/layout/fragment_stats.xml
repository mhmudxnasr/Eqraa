<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".stats.StatsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="120dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STATISTICS"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.15"
                android:textColor="@color/textPrimary"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="32dp"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#10000000"
                android:layout_marginBottom="32dp"/>

            <!-- Hero: Total Reading Time -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL READING TIME"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:textColor="#888888"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/stats_reading_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="72sp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="h"
                    android:textSize="32sp"
                    android:fontFamily="serif"
                    android:textColor="#AAAAAA"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/stats_reading_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="72sp"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textColor="#888888"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m"
                    android:textSize="32sp"
                    android:fontFamily="serif"
                    android:textColor="#AAAAAA"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <!-- Week Comparison Badge -->
            <TextView
                android:id="@+id/stats_week_comparison"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="↗ +0% vs last week"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#333333"
                android:background="@drawable/stats_badge_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#10000000"/>

            <!-- 2x2 Stats Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <!-- Books -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BOOKS"
                            android:textSize="12sp"
                            android:letterSpacing="0.05"
                            android:textColor="#888888"/>
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_baseline_menu_book_24"
                            app:tint="#CCCCCC"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/stats_total_books"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="40sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- Vertical Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="#10000000"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <!-- Pages -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PAGES"
                            android:textSize="12sp"
                            android:letterSpacing="0.05"
                            android:textColor="#888888"/>
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_baseline_description_24"
                            app:tint="#CCCCCC"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/stats_pages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textSize="40sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#10000000"
                android:layout_marginTop="24dp"/>

            <!-- 2nd Row: Speed & Streak -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">

                <!-- Speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SPEED"
                            android:textSize="12sp"
                            android:letterSpacing="0.05"
                            android:textColor="#888888"/>
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_baseline_speed_24"
                            app:tint="#CCCCCC"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/stats_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="—"
                        android:textSize="40sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WPM"
                        android:textSize="11sp"
                        android:textColor="#AAAAAA"/>
                </LinearLayout>

                <!-- Vertical Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="100dp"
                    android:background="#10000000"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <!-- Streak -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STREAK"
                            android:textSize="12sp"
                            android:letterSpacing="0.05"
                            android:textColor="#888888"/>
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_baseline_local_fire_department_24"
                            app:tint="#FF6B35"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/stats_streak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="40sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:layout_marginTop="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DAYS"
                        android:textSize="11sp"
                        android:textColor="#AAAAAA"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#10000000"
                android:layout_marginTop="24dp"/>

            <!-- Activity Section Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTIVITY"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:textColor="#888888"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <!-- Weekly Activity Bars (7 days) -->
            <LinearLayout
                android:id="@+id/stats_activity_bars"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="bottom|center_horizontal">

                <!-- Day bars will be populated programmatically -->

            </LinearLayout>

            <!-- Day Labels -->
            <LinearLayout
                android:id="@+id/stats_day_labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal">

                <!-- Day labels will be populated programmatically -->

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
