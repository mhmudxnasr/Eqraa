<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/textPrimary</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="android:fontFamily">@font/playfair_xml</item>
    </style>

    <style name="MainActivityTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:fontFamily">@font/playfair_xml</item>
    </style>

    <style name="DialogAnimationScale" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_scale</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_scale</item>
    </style>

</resources>